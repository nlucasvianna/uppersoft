{% extends 'base.html.twig' %}

{% block title %}Membro index{% endblock %}

{% block body %}
    <h1>Membro index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Cpf</th>
                <th>Nascimento</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Logradouro</th>
                <th>Cidade</th>
                <th>Estado</th>
                <th>Igreja_pertencente</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for membro in membros %}
            <tr>
                <td>{{ membro.id }}</td>
                <td>{{ membro.Nome }}</td>
                <td>{{ membro.cpf }}</td>
                <td>{{ membro.nascimento ? membro.nascimento|date('Y-m-d') : '' }}</td>
                <td>{{ membro.email }}</td>
                <td>{{ membro.telefone }}</td>
                <td>{{ membro.logradouro }}</td>
                <td>{{ membro.cidade }}</td>
                <td>{{ membro.estado }}</td>
                <td>{{ membro.igrejaPertencente }}</td>
                <td>
                    <a href="{{ path('app_membro_show', {'id': membro.id}) }}">show</a>
                    <a href="{{ path('app_membro_edit', {'id': membro.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_membro_new') }}">Create new</a>
{% endblock %}
